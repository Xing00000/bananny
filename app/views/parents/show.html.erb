<div id="parent-show">
	<div class="container">
		<div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">關於我</h2>
        <h3 class="section-subheading text-muted">
        <%=@parent.last_name%></h3>
      </div>
    </div>

      <div class="row">
        <div class="col-lg-12">
          <ul class="timeline">
						<li>
						  <div class="timeline-image">
						    <%=image_tag @parent.image.medium , :class =>"img-circle img-responsive" if @parent.image %>
						  </div>
						  <div class="timeline-panel">
						      <div class="timeline-heading">
						        <h4><%=@parent.nickname%> <%=@parent.gender =="FEMALE"? "媽咪" : "爹地" %></h4>
						        <h4 class="subheading"></h4>
						      </div>
						      <div class="timeline-body">
						        <p class="text-muted">
						        </p>
						      </div>
						    </div>
						</li>
						<%if @parent.children%>
							<%= render :partial => "profile" ,:collection => @parent.children, :as => :profile %>
						<%end%>
          </ul>
        </div>
      </div>
		<%if current_user == @parent.user%>
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="btn-group">
					<%= link_to "編輯個人資料",edit_parent_path(@parent),:class => "btn btn-primary"%>
					<%= link_to "建立小孩資料",new_parent_child_path(@parent),:class => "btn btn-info"%>
					<%if @parent.children%>
						<% @parent.children.each do |child| %>
							<%= link_to "修改#{child.nickname}資料",edit_child_path(child),:class => "btn btn-warning"%>
						<%end%>
					<%end%>
					</div>
				</div>
			</div>
		<%end%>
  </div>
</div>

