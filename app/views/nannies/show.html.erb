<p id="notice"><%= notice %></p>

<%=form_for @schedule ,:url => nanny_schedules_path(@nanny) do |f|%>
	<%= f.date_field :date %>
		<br>
	開始<%= f.time_select :start_time, :ampm => true, :minute_step => 30 %>
		<br>
	結束<%= f.time_select :end_time, :ampm => true, :minute_step => 30 %>
	<%= f.submit "SUBMIT" ,:class => "btn btn-primary pull-right" %>
<%end%>

<h2>Profile</h2>

<%= @nanny.last_name %>
<%= @nanny.first_name %>

<%if @nanny["image"]%>
	<%= image_tag @nanny.image.medium.url %>
<%end%>

	<%= link_to "EDIT",edit_nanny_path(@nanny),:class => "btn btn-primary"%>

<h2>Info</h2>


	<%= link_to "EDIT",edit_info_path(@nanny),:class => "btn btn-primary"%>

<%if @nanny.info%>
	<%= @nanny.info.weekday_charge %>
	<%= @nanny.info.holiday_charge %>
<%end%>


<h2>Schedule</h2>
<% @nanny_schedule.each do |s|%>
	<%= s.date %>
	<%= s.helfhour %>
	<br>
<%end%>

<%= link_to 'Edit', edit_nanny_path(@nanny) %> |
<%= link_to 'Back', nannies_path %>
