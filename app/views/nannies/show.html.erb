<%end%>

	<%= link_to "EDIT",edit_nanny_path(@nanny),:class => "btn btn-primary"%>

<h2>Info</h2>


	<%= link_to "EDIT",edit_info_path(@nanny),:class => "btn btn-primary"%>

<%if @nanny.info%>
	<%= @nanny.info.weekday_charge %>
	<%= @nanny.info.holiday_charge %>
<%end%>

<div id="schedule">
	<div id="bulid-schedule">
		<%= render "shared/build_schedule", {:build_schedule => @schedule ,:nanny => @nanny } %>
	</div>
	<div class="container">
		<div id="show-schedule">
			<%= render "shared/schedule", :nanny => @nanny %>
		</div>
	</div>
</div>

<%end%>
