
<h1>搜尋保母</h1>



<br>
<%= form_tag root_path ,:method => :get do %>
  <%= date_field_tag :date,{},:required => true, :autofocus => true  %>
  <%= time_select :start_time,:start_time, {:ampm => true, :minute_step => 30} %>
  <%= time_select :end_time,:end_time, {:ampm => true, :minute_step => 30 }%>
  <%= submit_tag "SUBMIT" ,:class => "btn btn-primary" %>
<% end %>

<% if @search_nanny %>
<%#@search_nanny = []%>

  <%= render 'result', :search_nanny => @search_nanny %>

<%end%>

<% if current_user && current_user.registered? == nil%>
  <%= link_to "保母註冊",new_user_nanny_path(current_user),:class => "btn btn-primary"%>
  <%= link_to "爸媽註冊",new_user_parent_path(current_user),:class => "btn btn-primary"%>

<% end %>

<% if current_user %>
  <%= link_to "個人資料",current_user.profile,:class => "btn btn-primary"%>
<%end%>